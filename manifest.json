{
  "manifest_version": 3,
  "name": "Smart TOC & Scroll",
  "version": "1.0",
  "description": "A smart browser extension that adds a scroll-to-top button and table of contents with automatic theme adaptation.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["catalog.js", "theme.js"],
      "css": ["toc.css", "themes.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
