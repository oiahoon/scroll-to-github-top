{
  "manifest_version": 2,
  "name": "Scroll to Github Top",
  "short_name": "STGT",
  "description": "This extension make you easy to Scroll to Github page Top.",
  "version": "1.5",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "http://*.miaowu.org/*"
      ],
      "css": ["button.css"],
      "js": ["button.js"]
    }
  ]
}