{
  "manifest_version": 3,
  "name": "Smart TOC & Scroll",
  "version": "2.0",
  "description": "Smart table of contents generator with smooth scroll. Automatically creates beautiful, interactive TOC for any webpage.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["catalog.js", "theme.js"],
      "css": ["toc.css", "themes.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
