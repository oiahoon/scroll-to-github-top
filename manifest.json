{
  "manifest_version": 3,
  "name": "Scroll to GitHub Top",
  "version": "1.9",
  "description": "Add a button to scroll to the top of GitHub pages",
  "permissions": [],
  "host_permissions": [
    "https://github.com/*",
    "https://notes.miaowu.org/*",
    "https://guides.rubyonrails.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://notes.miaowu.org/*",
        "https://guides.rubyonrails.org/*"
      ],
      "js": ["button.js", "catalog.js"],
      "css": ["toc.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
}
